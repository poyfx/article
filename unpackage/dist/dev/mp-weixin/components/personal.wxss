.personal .personal_content .personal_logo {
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-align-content: center;
              align-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.personal .personal_content .personal_logo .personal_img {
        margin-right: 8px;
}
.personal .personal_content .personal_logo .personal_img image {
          width: 52px;
          height: 52px;
          border-radius: 50%;
}
.personal .personal_content .personal_logo .personal_text {
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
                flex-direction: column;
}
.personal .personal_content .personal_logo .personal_text view {
          font-size: 0.95rem;
          color: #555555;
          font-weight: 550;
          margin-bottom: 5px;
}
.personal .personal_content .personal_logo .personal_text text {
          font-size: 0.65rem;
          color: #888888;
}
.personal .personal_content .personal_add {
      border: 1px solid #dddddd;
      padding: 5px 8px;
      font-size: 0.65rem;
      color: #555555;
}
.personal .personal_tell text {
    font-size: 0.65rem;
