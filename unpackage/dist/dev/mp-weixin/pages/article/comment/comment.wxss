.comment .comment_content {
  margin-bottom: 10px;
}
.comment .comment_content textarea {
    width: 100%;
    height: 300px;
    display: inline-block;
    box-sizing: border-box;
    padding: 13px 28px;
    background-color: #FFFFFF;
}
.comment .comment_info {
  padding: 0 27px 0 28px;
  margin-bottom: 28px;
}
.comment .comment_info .comment_list {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-align-content: center;
            align-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.comment .comment_info .comment_list text {
      color: #888888;
      font-size: 0.75rem;
      line-height: 60px;
}
.comment .comment_info .comment_list view {
      color: #555555;
      font-size: 0.85rem;
      font-weight: 550;
}
.comment .comment_info .comment_list image {
      width: 52px;
      height: 52px;
}
.comment .comment_btn button {
  width: 90%;
  padding: 6px 0 5px;
  font-size: 0.75rem;
}

