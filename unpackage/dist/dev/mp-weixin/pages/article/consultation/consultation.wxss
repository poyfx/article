.consultation .follow {
  padding: 12px 17px 12px 28px;
  margin-bottom: 10px;
  background-color: #FFF8D8;
}
.consultation .follow text {
    font-size: 0.65rem;
    color: #555555;
    line-height: 26px;
}
.consultation .autoReply {
  padding: 0 27px 0px 28px;
  margin-bottom: 10px;
}
.consultation .autoReply .switch {
    padding: 15px 0 12px;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-align-content: center;
            align-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.consultation .autoReply .switch text {
      color: #888888;
      font-size: 0.75rem;
}
.consultation .autoReply .autoReply_content {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
}
.consultation .autoReply .autoReply_content text {
      padding: 22px 0 19px;
      color: #888888;
      font-size: 0.75rem;
}
.consultation .autoReply .autoReply_content textarea {
      height: 55px;
      font-size: 0.85rem;
      color: #555555;
}
.consultation .consultation_name {
  padding: 0 27px 0px 28px;
  margin-bottom: 72px;
}
.consultation .consultation_name .list {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-align-content: center;
            align-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding: 22px 0 17px;
}
.consultation .consultation_name .list text {
      font-size: 0.75rem;
      color: #888888;
}
.consultation .consultation_name .list image {
      width: 52px;
      height: 52px;
      border-radius: 50%;
}
.consultation .consultation_name .list view {
      font-size: 0.85rem;
      color: #555555;
      font-weight: 550;
}
.consultation .consultation_btn {
  padding-bottom: 30px;
}
.consultation .consultation_btn button {
    width: 90%;
    font-size: 0.75rem;
    padding: 6px 0 5px;
}
.consultation .consultation_btn .use button {
    color: #FFFFFF;
    background-color: #3C84EF;
    box-shadow: 0 2px 6px 0 #9DC4FF;
}
.consultation .consultation_btn .used .confirm {
    color: #FFFFFF;
    background-color: #3C84EF;
    box-shadow: 0 2px 6px 0 #9DC4FF;
    margin-bottom: 10px;
}
.consultation .consultation_btn .used .detele {
    color: #EA4141;
    box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.13);
}

