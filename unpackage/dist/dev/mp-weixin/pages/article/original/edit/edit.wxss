.edit {
  height: 100vh;
}
.edit .edit_content {
    padding: 26px 30px 29px 31px;
}
.edit .edit_content .edit_content_img {
      width: 70px;
      height: 70px;
      margin-right: 12px;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-align-content: center;
              align-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      background-color: #eeeeee;
}
.edit .edit_content .edit_content_img view {
        color: #dddddd;
        font-size: 46px;
        line-height: 36px;
        font-weight: 100;
}
.edit .edit_content .edit_content_img text {
        color: #888888;
        font-size: 0.65rem;
}
.edit .edit_content .edit_content_info {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      color: #555555;
}
.edit .edit_content .edit_content_info view {
        padding: 7px 5px;
}
.edit .edit_content .edit_content_info .title input {
        font-size: 0.95rem;
}
.edit .edit_content .edit_content_info .user input {
        font-size: 0.85rem;
}
.edit .edit_article_title {
    background-color: #f7f7f7;
    padding: 0 0px 0 28px;
    -webkit-align-content: center;
            align-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.edit .edit_article_title .edit_article_left text {
      font-size: 0.75rem;
      color: #555555;
      font-weight: 550;
}
.edit .edit_article_title .edit_article_right {
      padding: 23px 0 20px;
}
.edit .edit_article_title .edit_article_right .edit_article_img {
        -webkit-align-content: center;
                align-content: center;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        margin-right: 20px;
}
.edit .edit_article_title .edit_article_right .edit_article_img image {
          width: 20px;
          height: 20px;
          margin-right: 5px;
}
.edit .edit_article_title .edit_article_right .edit_article_img text {
          color: #888888;
          font-size: 0.65rem;
}
.edit .edit_article {
    height: 300px;
    max-height: 300px;
    padding: 20px 26px 20px 28px;
}
.edit .edit_article .rich {
      width: 100%;
      height: 100%;
      max-height: 300px;
      overflow: auto;
      outline: none;
}
.edit .edit_article .rich:empty:before {
      content: attr(data-placeholder);
      color: #bbb;
}
.edit .edit_article .rich:focus:before {
      content: none;
}
.edit .edit_btn {
    margin-bottom: 20px;
}
.edit .edit_btn button {
      width: 90%;
      background-color: #3C84EF;
      font-size: 0.75rem;
      color: #FFFFFF;
      padding: 6px 0 5px;
}

